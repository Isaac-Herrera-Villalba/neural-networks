# .editorconfig para linear-regression
# Mantiene un estilo consistente en código Python, LaTeX y archivos de configuración
root = true

#############################
# Reglas por defecto
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

######################################
# Ficheros de texto, Markdown y config
[*.{md,txt,ini,conf}]
trim_trailing_whitespace = false
max_line_length = 100

# input.txt (config principal del proyecto)
[input.txt]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = true

######################################
# Archivos de datos (CSV, ODS, XLSX)
[*.{csv,ods,xlsx}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = false
indent_style = space
indent_size = 4

######################################
# Código Python
[*.py]
indent_style = space
indent_size = 4
# Compatible con Black pero con un poco más de margen para ecuaciones y docstrings largos
max_line_length = 95
trim_trailing_whitespace = true
insert_final_newline = true

######################################
# Archivos Makefile
[Makefile]
indent_style = tab
trim_trailing_whitespace = false

######################################
# Archivos LaTeX
[*.tex]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
# Líneas largas permitidas por fórmulas extensas
max_line_length = 120

######################################
# Archivos de licencia o README
[{LICENSE,README,README.md}]
trim_trailing_whitespace = false
insert_final_newline = true

